{
  "name": "uptimerobot-page",
  "description": "Another status page based on UptimeRobot",
  "version": "0.0.2",
  "main": "build/bootstrap/app.js",
  "repository": "https://github.com/giuem/uptimerobot-page.git",
  "author": "giuem <giuemcom@gmail.com>",
  "license": "GPL-3.0",
  "scripts": {
    "start": "node build/bootstrap",
    "dev": "gulp dev",
    "build": "babel src -d build && gulp",
    "clean": "rimraf public/assets build",
    "precommit": "npm run clean && npm run build && git add build public/assets",
    "test": "nyc ava",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "homepage": "https://github.com/giuem/uptimerobot-page",
  "bugs": {
    "url": "https://github.com/giuem/uptimerobot-page/issues"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "cron": "^1.3.0",
    "date-fns": "^1.29.0",
    "dotenv": "^5.0.0",
    "immutable": "^3.8.2",
    "koa": "^2.4.1",
    "koa-error": "^3.1.1",
    "koa-router": "^7.3.0",
    "koa-static-cache": "^5.1.2",
    "koa-views": "^6.1.3",
    "memory-cache": "^0.2.0",
    "pug": "^2.0.0-rc.4",
    "uptimerobot-apiv2": "^0.0.2"
  },
  "devDependencies": {
    "autoprefixer": "8.6.5",
    "ava": "0.25.0",
    "babel-cli": "6.26.0",
    "babel-preset-env": "1.6.1",
    "browser-sync": "2.24.5",
    "cheerio": "1.0.0-rc.2",
    "codecov": "3.0.3",
    "cssnano": "3.10.0",
    "eslint": "4.18.1",
    "eslint-config-prettier": "2.9.0",
    "eslint-config-standard": "11.0.0",
    "eslint-plugin-import": "2.9.0",
    "eslint-plugin-node": "6.0.0",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-promise": "3.6.0",
    "eslint-plugin-standard": "3.0.1",
    "gulp": "3.9.1",
    "gulp-nodemon": "2.2.1",
    "gulp-postcss": "7.0.1",
    "gulp-rev": "8.1.1",
    "gulp-rev-replace": "0.4.4",
    "gulp-uglify": "3.0.0",
    "husky": "0.14.3",
    "nock": "9.1.9",
    "normalize.css": "8.0.0",
    "nyc": "11.4.1",
    "postcss-assets": "5.0.0",
    "postcss-custom-properties": "7.0.0",
    "postcss-debug": "0.4.2",
    "postcss-import": "11.1.0",
    "postcss-nested": "3.0.0",
    "prettier": "1.10.2",
    "rimraf": "2.6.2",
    "superkoa": "1.0.3",
    "time-require": "0.1.2"
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier"
    ],
    "plugins": [
      "prettier",
      "standard"
    ],
    "rules": {
      "prettier/prettier": "error"
    },
    "env": {
      "node": true,
      "es6": true
    }
  },
  "eslintIgnore": [
    "build",
    "public"
  ],
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 8
          }
        }
      ]
    ]
  },
  "ava": {
    "files": [
      "test/test.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "tap": false,
    "powerAssert": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "exclude": [
      "src/lib/*.js"
    ]
  }
}
